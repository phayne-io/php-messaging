{
  "name": "phayne-io/php-messaging",
  "description": "Common classes shared between Phayne components that leverage domain messages",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "proprietary",
  "authors": [
    {
      "name": "Julien Guittard",
      "email": "julien.guittard@me.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "ramsey/uuid": "^4.7",
    "beberlei/assert": "^v3.3",
    "phayne-io/php-exception": "^1.0@dev"
  },
  "require-dev": {
    "dg/bypass-finals": "^1.4",
    "malukenho/docheader": "^1.0",
    "php-coveralls/php-coveralls": "^v2.5",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.7",
    "vimeo/psalm": "^4.30"
  },
  "autoload": {
    "psr-4": {
      "Phayne\\Messaging\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhayneTest\\Messaging\\": "test/"
    }
  },
  "scripts": {
    "test-html": "XDEBUG_MODE=coverage phpunit --colors=always -vvv --coverage-html build/html"
  },
  "support": {
    "source": "https://github.com/phayne-io/php-messaging",
    "issues": "https://github.com/phayne-io/php-messaging/issues",
    "rss": "https://github.com/phayne-io/php-messaging/releases.atom",
    "wiki": "https://github.com/phayne-io/php-messaging/wiki"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  }
}
